{
  "name": "vanilla-js-template",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/bigsaigon333/vanilla-js-template.git",
  "author": {
    "name": "Danny Kim",
    "email": "likepeppermint@gmail.com",
    "url": "https://velog.io/@bigsaigon333"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "eslint --fix --cache **/*.js",
    "stylelint": "stylelint --fix --cache '**/*.css'",
    "format": "prettier --write --ignore-unknown .",
    "prepare": "husky install",
    "deploy": "NODE_DEBUG=gh-pages gh-pages --dist src -f"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "gh-pages": "^3.2.3",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.4.1",
    "stylelint": "^14.0.0",
    "stylelint-config-hudochenkov": "^6.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache",
    "*.css": "stylelint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
